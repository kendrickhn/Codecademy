-- Get the most recent page visit timestamp for each user
WITH last_touch AS (
  SELECT 
    user_id, 
    MAX(timestamp) AS last_touch_at  -- The latest timestamp per user
  FROM page_visits
  GROUP BY user_id
)

-- Join the last_touch data back to the original page_visits table
-- to retrieve the utm_source associated with the user's last visit
SELECT 
  lt.user_id,
  lt.last_touch_at,
  pv.utm_source
FROM last_touch lt
JOIN page_visits pv
  ON lt.user_id = pv.user_id
  AND lt.last_touch_at = pv.timestamp;  -- Ensures we're matching only the last visit

WITH first_touch AS (
    SELECT user_id,
        MIN(timestamp) as first_touch_at
    FROM page_visits
    GROUP BY user_id)
SELECT ft.user_id,
    ft.first_touch_at,
    pv.utm_source,
		pv.utm_campaign
FROM first_touch ft
JOIN page_visits pv
    ON ft.user_id = pv.user_id
    AND ft.first_touch_at = pv.timestamp;

